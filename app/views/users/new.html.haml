.text-center
  %legend.float-none.col-xs-12.col-sm-7.col-md-5.col-lg-5
    %h1 Sign Up

.sign-up.float-none.col-xs-12.col-sm-7.col-md-5.col-lg-5
  = simple_form_for(@user, method: :post) do |f|
    = f.input :first_name
    = f.input :last_name
    = f.input :email
    = f.input :password
    = f.input :password_confirmation
    .text-center
      = f.button :submit, value: 'Sing Up', class: 'btn btn-primary'